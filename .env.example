# Solana Network Configuration
# Options: localnet, devnet, mainnet-beta
CLUSTER=localnet

# RPC Endpoint (optional - defaults based on CLUSTER)
# Localnet: http://127.0.0.1:8899
# Devnet: https://api.devnet.solana.com
# Mainnet: https://api.mainnet-beta.solana.com
SOLANA_RPC_URL=http://127.0.0.1:8899

# Wallet Configuration
# Path to Solana keypair JSON file (defaults to ~/.config/solana/id.json)
# WALLET_PATH=C:\\Users\\YOURNAME\\.config\\solana\\id.json

# Forge Program Configuration
# Program ID from Anchor.toml (defaults to localnet program ID)
FORGE_PROGRAM_ID=BncAjQaJFE7xN4ut2jaAGVSKdrqpuzyuHoiCGTpj1DkN

# Pinata Configuration (for metadata/media uploads)
PINATA_JWT=your_pinata_jwt_here
PINATA_GATEWAY=https://gateway.pinata.cloud

# Next.js Public Environment Variables
# These are exposed to the browser (must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_SOLANA_RPC_URL=http://127.0.0.1:8899
NEXT_PUBLIC_CLUSTER=localnet
NEXT_PUBLIC_FORGE_PROGRAM_ID=BncAjQaJFE7xN4ut2jaAGVSKdrqpuzyuHoiCGTpj1DkN
# Forge authority pubkey used to derive the ForgeConfig PDA (the wallet that ran `npm run init-forge`)
NEXT_PUBLIC_FORGE_AUTHORITY=

# Optional: Custom RPC Provider
# NEXT_PUBLIC_HELIUS_API_KEY=your_helius_key
# NEXT_PUBLIC_QUICKNODE_URL=your_quicknode_url

